{
    "require": {
        "twig/twig": "^3.6",
        "guzzlehttp/guzzle": "^7.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "src\\": "src/",
            "PHPUnit\\Framework\\": "vendor/phpunit/phpunit/src/"
        },
        "classmap": [
            "src/database/",
